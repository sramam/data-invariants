{
  "name": "data-invariants",
  "version": "0.0.0-development",
  "description": "A library to extract invariants over partially variable data",
  "keywords": [],
  "author": "Shishir Ramam",
  "repository": "github:sramam/data-invariants",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "todos": "leasot --exit-nicely --skip-unsupported ./src",
    "staged-mods-ok": "git-mods --staged_ok",
    "no-mods": "git-mods",
    "clean": "rimraf dist .nyc_output coverage",
    "lint": "tslint -c tslint.json --project ./tsconfig.json --format stylish",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "secure": "npm audit",
    "check": "npm outdated",
    "check-coverage": "nyc check-coverage --lines 95 --functions 95 --branches 95 --statements 95",
    "coveralls-report": "nyc report --reporter=text-lcov | coveralls",
    "nyc-report": "nyc report --reporter=text-summary",
    "test": "cross-env NODE_ENV=test nyc -r html -r lcov -r text-summary ava --verbose",
    "test-no-cover": "cross-env NODE_ENV=test ava --verbose",
    "build": "npm-run-batch",
    "qt": "npm-run-batch",
    "pkg-ok": "pkg-ok",
    "dep-check": "dependency-check . --no-dev",
    "pre-commit-hook": "run-batch",
    "pre-push-hook": "run-batch",
    "snapshots": "cross-env NODE_ENV=test ava --verbose --update-snapshots",
    "all": "run-batch",
    "cloc": "cloc --exclude-dir=test --by-file ./src"    
  },
  "run-batch": {
    "build": [
      "lint",
        "clean",
      "compile",
      "test",
      "todos"
    ],
    "qt": [
      "clean",
      "compile",
      "test-no-cover"
    ],
    "pre-commit-hook": [
      "check-coverage",
      "dep-check",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "pre-push-hook": [
      "secure",
      "no-mods"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "ava": "^2.1.0",
    "cloc": "^2.5.0",
    "commitizen": "^3.1.1",
    "conventional-changelog-cli": "^2.0.21",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "git-mods": "^1.0.9",
    "husky": "^2.4.1",
    "leasot": "^7.4.0",
    "npm-run-batch": "0.0.8",
    "nyc": "^14.1.1",
    "pkg-ok": "^2.3.1",
    "rimraf": "^2.6.3",
    "tslint": "^5.17.0",
    "tslint-config-security": "^1.16.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.5.2",
    "typestrict": "^1.0.2"
  },
  "dependencies": {
    "json5": "^2.1.0",
    "micromatch": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "serial": false,
    "files": [
      "dist/**/test.js",
      "dist/**/test/**/*.js",
      "!dist/**/test/fixtures/**/*.js"
    ],
    "sources": [
      "dist/**/*.js"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/test/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-hook",
      "pre-push": "npm run pre-push-hook"
    }
  }
}
